<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-playservices-util"
        version="0.0.1">
  <name>Cordova Plugin Template</name>
  <description></description>
  <license>MIT</license>
  <keywords></keywords>
  <repo>https://github.com/wischweh/cordova-plugin-playservices-util.git</repo>
  <issue>https://github.com/wischweh/cordova-plugin-playservices-util/issues</issue>

  <engines>
    <engine name="cordova-android" version=">=3"/> <!-- Play Services were introduced in 2.3.2. Newer Version require API level 14 (4.0.1) see
    https://android-developers.googleblog.com/2016/11/google-play-services-and-firebase-for-android-will-support-api-level-14-at-minimum.html -->
  </engines>

  <!-- android -->
  <platform name="android">
    <js-module src="www/plugin.js" name="plugin">
      <runs/>

      <!-- This is the window variable name you want, like window.MyCordovaPlugin -->
      <clobbers target="PlayservicesUtil"/>
    </js-module>
    <framework src="src/android/de/ndr/playservices_util/playservices_util.gradle" custom="true"
               type="gradleReference"/>
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="PlayservicesUtil">
        <param name="android-package" value="de.ndr.playservices_util.PlayservicesUtilPlugin"/>
        <param name="onload" value="true"/>
      </feature>
    </config-file>

    <source-file src="src/android/de/ndr/playservices_util/PlayservicesUtilPlugin.java"
                 target-dir="src/de/ndr/playservices_util"/>
    <source-file src="src/android/de/ndr/playservices_util"
                 target-dir="src/de/ndr/playservices_util"/>

  </platform>

</plugin>
